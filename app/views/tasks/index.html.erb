<h1>タスク一覧</h1>

 <% if @tasks.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
      
      <div class="center jumbotron">
        <div class="text-center">
          <h1>Welcome to the Microposts</h1>
          <%= link_to 'Sigh up now!', sighup_path, class: 'btn btn-lg btn-primary' %>
        </div>
      </div>
      
     <% if logged_in? %>
       <p>ログイン完了ユーザ: <%= current_user.name %></p>
       <% else %>
       <div class="center jumbotron">
        <div class="text-center">
          <h1>Welcome to the Microposts</h1>
          <%= link_to 'Sig up now!', sighup_path, class: 'btn btn-lg btn-primary' %>
        </div>
       </div>
      <% end %>
      
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>