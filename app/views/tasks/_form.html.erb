<%= form_for(task) do |f| %>
  <% if message.errors.any? %>
   <div id='error_explanation'>
     <ul>
       <% message.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
   </div>
  <% end %>


<%= form_for(@task) do |f| %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>
